@model Teacher
@{ ViewData["Title"] = "Add Teacher"; ViewData["Active"] = "Teachers"; }
<div class="card" style="max-width:700px">
    <div class="card-header"><i class="bi bi-person-plus me-2"></i>Add New Teacher</div>
    <div class="card-body">
        <form asp-action="AddTeacher" method="post">
            @Html.AntiForgeryToken()
            <div class="row g-3">
                <div class="col-md-6"><label class="form-label fw-semibold small">Full Name *</label><input asp-for="FullName" class="form-control" required/></div>
                <div class="col-md-6"><label class="form-label fw-semibold small">Email</label><input asp-for="Email" class="form-control" type="email"/></div>
                <div class="col-md-6"><label class="form-label fw-semibold small">Password *</label><input name="password" class="form-control" type="password" required/></div>
                <div class="col-md-6"><label class="form-label fw-semibold small">Phone</label><input asp-for="Phone" class="form-control"/></div>
                <div class="col-md-6"><label class="form-label fw-semibold small">Qualification</label><input asp-for="Qualification" class="form-control"/></div>
                <div class="col-md-6"><label class="form-label fw-semibold small">Join Date</label><input asp-for="JoinDate" class="form-control" type="date"/></div>
            </div>
            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>Add Teacher</button>
                <a asp-action="Teachers" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
