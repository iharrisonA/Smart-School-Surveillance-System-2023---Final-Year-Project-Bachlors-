@* ── Students List ──────────────────────────────────────────────────── *@
@model IEnumerable<Student>
@{ ViewData["Title"] = "Students"; ViewData["Active"] = "Students"; }
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-people me-2"></i>All Students (@Model.Count())</span>
        <a asp-action="AddStudent" class="btn btn-primary btn-sm"><i class="bi bi-plus-lg me-1"></i>Add Student</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light"><tr>
                <th>Name</th><th>Roll No</th><th>Class</th><th>Email</th><th>Phone</th><th>Actions</th>
            </tr></thead>
            <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td class="fw-semibold">@s.FullName</td>
                    <td>@s.RollNumber</td>
                    <td><span class="badge bg-primary">@(s.Class?.Name ?? "—")</span></td>
                    <td>@s.Email</td>
                    <td>@s.Phone</td>
                    <td>
                        <a asp-action="EditStudent" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                        <form asp-action="DeleteStudent" method="post" class="d-inline" onsubmit="return confirm('Delete this student?')">
                            <input type="hidden" name="id" value="@s.Id"/>
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
