@model IEnumerable<Teacher>
@{ ViewData["Title"] = "Teachers"; ViewData["Active"] = "Teachers"; }
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-person-badge me-2"></i>All Teachers (@Model.Count())</span>
        <a asp-action="AddTeacher" class="btn btn-primary btn-sm"><i class="bi bi-plus-lg me-1"></i>Add Teacher</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light"><tr>
                <th>Name</th><th>Email</th><th>Phone</th><th>Qualification</th><th>Joined</th><th>Actions</th>
            </tr></thead>
            <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td class="fw-semibold">@t.FullName</td>
                    <td>@t.Email</td>
                    <td>@t.Phone</td>
                    <td>@t.Qualification</td>
                    <td>@t.JoinDate.ToString("dd MMM yyyy")</td>
                    <td>
                        <a asp-action="EditTeacher" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                        <form asp-action="DeleteTeacher" method="post" class="d-inline" onsubmit="return confirm('Delete this teacher?')">
                            <input type="hidden" name="id" value="@t.Id"/>
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
