@model IEnumerable<Class>
@{ ViewData["Title"] = "Classes"; ViewData["Active"] = "Classes"; }
<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header"><i class="bi bi-plus-circle me-2"></i>Add Class</div>
            <div class="card-body">
                <form asp-action="AddClass" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-2"><label class="form-label small fw-semibold">Class Name *</label><input name="name" class="form-control" placeholder="e.g. 10-A" required/></div>
                    <div class="mb-3"><label class="form-label small fw-semibold">Description</label><input name="description" class="form-control"/></div>
                    <button type="submit" class="btn btn-primary w-100">Add Class</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header"><i class="bi bi-building me-2"></i>All Classes</div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light"><tr><th>Name</th><th>Description</th><th>Students</th><th>Actions</th></tr></thead>
                    <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@c.Name</td>
                            <td class="text-muted">@c.Description</td>
                            <td><span class="badge bg-primary">@c.Students.Count</span></td>
                            <td>
                                <form asp-action="DeleteClass" method="post" class="d-inline" onsubmit="return confirm('Delete class?')">
                                    <input type="hidden" name="id" value="@c.Id"/>
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
