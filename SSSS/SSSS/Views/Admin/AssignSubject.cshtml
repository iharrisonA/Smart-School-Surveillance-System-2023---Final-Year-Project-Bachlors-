@{ ViewData["Title"] = "Assign Subjects"; ViewData["Active"] = "AssignSubject"; }
<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header"><i class="bi bi-diagram-3 me-2"></i>Assign Subject to Teacher</div>
            <div class="card-body">
                <form asp-action="AssignSubject" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-2"><label class="form-label small fw-semibold">Teacher</label><select name="teacherId" asp-items="ViewBag.Teachers" class="form-select"><option value="">Select Teacher</option></select></div>
                    <div class="mb-2"><label class="form-label small fw-semibold">Subject</label><select name="subjectId" asp-items="ViewBag.Subjects" class="form-select"><option value="">Select Subject</option></select></div>
                    <div class="mb-3"><label class="form-label small fw-semibold">Class</label><select name="classId" asp-items="ViewBag.Classes" class="form-select"><option value="">Select Class</option></select></div>
                    <button type="submit" class="btn btn-primary w-100">Assign</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header"><i class="bi bi-table me-2"></i>Current Assignments</div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light"><tr><th>Teacher</th><th>Subject</th><th>Class</th></tr></thead>
                    <tbody>
                    @foreach (var sa in (List<SubjectAssignment>)ViewBag.Existing)
                    {
                        <tr>
                            <td>@sa.Teacher.FullName</td>
                            <td>@sa.Subject.Name</td>
                            <td><span class="badge bg-primary">@sa.Class.Name</span></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
