@model LoginViewModel
@{ ViewData["Title"] = "Login"; Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>SSSS ‚Äî Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
    <style>
        body { background: linear-gradient(135deg, #1a237e 0%, #283593 50%, #00acc1 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; font-family: 'Segoe UI', sans-serif; }
        .login-card { background: #fff; border-radius: 16px; padding: 2.5rem 2rem; width: 100%; max-width: 400px; box-shadow: 0 20px 60px rgba(0,0,0,.25); }
        .login-card .brand { text-align: center; margin-bottom: 1.8rem; }
        .login-card .brand .icon { font-size: 3rem; }
        .login-card .brand h4 { font-weight: 700; color: #1a237e; margin: .3rem 0 .1rem; }
        .login-card .brand small { color: #777; font-size: .8rem; }
        .form-control { border-radius: 8px; padding: .65rem 1rem; }
        .btn-primary { background: #1a237e; border: none; border-radius: 8px; padding: .7rem; font-weight: 600; }
        .btn-primary:hover { background: #283593; }
        .demo-creds { background: #f4f6fb; border-radius: 8px; padding: .8rem 1rem; font-size: .8rem; color: #555; margin-top: 1.2rem; }
    </style>
</head>
<body>
<div class="login-card">
    <div class="brand">
        <div class="icon">üè´</div>
        <h4>SSSS</h4>
        <small>Smart School Surveillance System</small>
    </div>

    <form asp-action="Login" asp-controller="Account" method="post">
        <div asp-validation-summary="All" class="alert alert-danger py-2 small" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")"></div>

        <div class="mb-3">
            <label class="form-label fw-semibold small">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="you@ssss.edu" />
        </div>
        <div class="mb-4">
            <label class="form-label fw-semibold small">Password</label>
            <input asp-for="Password" class="form-control" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" type="password" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign In</button>
    </form>

    <div class="demo-creds">
        <strong>Demo Credentials</strong><br/>
        Admin &nbsp;&nbsp; admin@ssss.edu &nbsp;/&nbsp; Admin@123
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
