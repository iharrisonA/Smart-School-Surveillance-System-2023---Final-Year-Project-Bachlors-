@{ ViewData["Title"] = "Student Dashboard"; ViewData["Active"] = "Dashboard"; }
<div class="row g-3 mb-4">
    <div class="col-md-3"><div class="stat-card" style="background:linear-gradient(135deg,#43a047,#388e3c)"><div class="number">@ViewBag.TotalPresent</div><div class="label"><i class="bi bi-calendar-check me-1"></i>Days Present</div></div></div>
    <div class="col-md-3"><div class="stat-card" style="background:linear-gradient(135deg,#e53935,#c62828)"><div class="number">@ViewBag.TotalAbsent</div><div class="label"><i class="bi bi-calendar-x me-1"></i>Days Absent</div></div></div>
    <div class="col-md-3"><div class="stat-card" style="background:linear-gradient(135deg,#f9a825,#f57f17)"><div class="number">@ViewBag.PendingFees</div><div class="label"><i class="bi bi-receipt me-1"></i>Pending Fees</div></div></div>
    <div class="col-md-3"><div class="stat-card" style="background:linear-gradient(135deg,#1a237e,#283593)"><div class="number">@ViewBag.ClassName</div><div class="label"><i class="bi bi-building me-1"></i>My Class</div></div></div>
</div>
<div class="card"><div class="card-header"><i class="bi bi-megaphone me-2"></i>Latest Announcements</div>
<div class="card-body">@foreach (var a in (List<Announcement>)ViewBag.Announcements){<div class="border rounded p-3 mb-2"><div class="d-flex justify-content-between"><h6>@a.Title</h6><small class="text-muted">@a.CreatedAt.ToString("dd MMM")</small></div><p class="mb-0 text-muted small">@a.Content</p></div>}</div></div>
