@model IEnumerable<Mark>
@{ ViewData["Title"] = "My Marks"; ViewData["Active"] = "Marks"; }
<div class="card"><div class="card-header"><i class="bi bi-bar-chart me-2"></i>My Academic Marks</div>
<div class="card-body p-0"><table class="table table-hover mb-0"><thead class="table-light"><tr><th>Subject</th><th>Exam Type</th><th>Obtained</th><th>Total</th><th>Percentage</th><th>Date</th></tr></thead>
<tbody>@foreach (var m in Model){
    var pct = (int)(m.ObtainedMarks / m.TotalMarks * 100);
    <tr><td class="fw-semibold">@m.Subject?.Name</td><td>@m.ExamType</td><td>@m.ObtainedMarks</td><td>@m.TotalMarks</td>
    <td><span class="badge @(pct >= 80 ? "bg-success" : pct >= 60 ? "bg-warning text-dark" : "bg-danger")">@pct%</span></td><td>@m.Date.ToString("dd MMM yyyy")</td></tr>}
</tbody></table></div></div>
