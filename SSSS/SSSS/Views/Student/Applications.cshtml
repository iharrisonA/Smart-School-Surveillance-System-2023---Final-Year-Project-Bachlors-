@model IEnumerable<LeaveApplication>
@{ ViewData["Title"] = "Leave Applications"; ViewData["Active"] = "Applications"; }
<div class="row g-3">
<div class="col-md-4"><div class="card"><div class="card-header"><i class="bi bi-plus-circle me-2"></i>Apply for Leave</div>
<div class="card-body"><form asp-action="ApplyLeave" method="post">@Html.AntiForgeryToken()
<div class="mb-2"><label class="form-label small fw-semibold">Reason *</label><textarea name="reason" class="form-control" rows="3" required></textarea></div>
<div class="mb-2"><label class="form-label small fw-semibold">From Date</label><input name="fromDate" type="date" class="form-control" required/></div>
<div class="mb-3"><label class="form-label small fw-semibold">To Date</label><input name="toDate" type="date" class="form-control" required/></div>
<button type="submit" class="btn btn-primary w-100">Submit Application</button></form></div></div></div>
<div class="col-md-8"><div class="card"><div class="card-header"><i class="bi bi-file-earmark-check me-2"></i>My Applications</div>
<div class="card-body p-0"><table class="table table-hover mb-0"><thead class="table-light"><tr><th>Reason</th><th>From</th><th>To</th><th>Status</th></tr></thead>
<tbody>@foreach (var a in Model){<tr><td>@a.Reason</td><td>@a.FromDate.ToString("dd MMM")</td><td>@a.ToDate.ToString("dd MMM yyyy")</td>
<td><span class="badge @(a.Status == "Approved" ? "bg-success" : a.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")">@a.Status</span></td></tr>}
</tbody></table></div></div></div></div>
